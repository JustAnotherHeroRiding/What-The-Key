<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WhatTheKey" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Custom text appearance using Figtree font -->
        <item name="textAppearanceBody1">@style/figtreeFont</item>
        <item name="textAppearanceBody2">@style/figtreeFont</item>
        <item name="textAppearanceSubtitle1">@style/figtreeFont</item>
        <item name="textAppearanceSubtitle2">@style/figtreeFont</item>
        <item name="textAppearanceCaption">@style/figtreeFont</item>
        <item name="textAppearanceOverline">@style/figtreeFont</item>
        <item name="textAppearanceButton">@style/figtreeFont</item>
    </style>
    <!-- Figtree -->
    <style name="figtreeFont" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/figtree</item>
    </style>
</resources>